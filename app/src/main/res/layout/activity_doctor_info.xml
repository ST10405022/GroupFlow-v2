<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarDoctorInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="@string/doctor_info"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_back"
        app:menu="@menu/menu_top_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable doctor info -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBarDoctorInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageDoctor"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_doctor"
                android:contentDescription="@string/doctor_picture"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_name"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textDoctorSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specialty"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textDoctorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textDoctorPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color_state"
        app:itemTextColor="@color/nav_item_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
